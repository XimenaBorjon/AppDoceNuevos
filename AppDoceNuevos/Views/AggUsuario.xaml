<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AppDoceNuevos.ViewModels"
             x:Class="AppDoceNuevos.Views.AggUsuario"
             Title="AggUsuario">
    <ContentPage.BindingContext>
        <vm:DirectorViewModels></vm:DirectorViewModels>
    </ContentPage.BindingContext>
    <Grid>
        <Grid>
            <Grid.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#993362" Offset="0.2"></GradientStop>
                    <GradientStop Color="#A03D5C" Offset="0.4"></GradientStop>
                    <GradientStop Color="#E04823" Offset="0.6"></GradientStop>
                    <GradientStop Color="#CD583C" Offset="0.8"></GradientStop>
                    <GradientStop Color="#DA6E3D" Offset="1.0"></GradientStop>

                </LinearGradientBrush>
            </Grid.Background>
            <Image
                    Margin="0,-410,0,0"
                    Source="anadiramigo.png"
                    HeightRequest="250"
                    WidthRequest="140"
            />
            <Label
             Margin="0,40,0,0"
             Text="Agregar Usuario"
             TextColor="White"
             FontSize="50"
             FontFamily="Royalacid"
             HorizontalOptions="Center"
            />

            <Label
             Margin="-220,310,0,0"
             Text="Usuario"
             TextColor="White"
             FontSize="25"
             FontFamily="Royalacid"
             HorizontalOptions="Center"
            />

            <Border Stroke="#F2B90F"
                         StrokeShape="RoundRectangle 40,40,40,40"
                        HeightRequest="45"
                        WidthRequest="300"
                 StrokeThickness="3"
                 Background="#AA5156"
                 Margin="-10,-50,0,0"
                 HorizontalOptions="Center">
                <Entry Text="{Binding usuario.Usuario1}"
                 FontSize="15"
                 TextColor="White"
                 />
            </Border>

            <Label
             Margin="-180,410,0,0"
             Text="Contrasena"
             TextColor="White"
             FontSize="25"
             FontFamily="Royalacid"
             HorizontalOptions="Center"
            />

            <Border Stroke="#F2B90F"
                         StrokeShape="RoundRectangle 40,40,40,40"
                        HeightRequest="45"
                        WidthRequest="300"
                 StrokeThickness="3"
                 Background="#AA5156"
                 Margin="-10,170,0,0"
                 HorizontalOptions="Center">
                <Entry Text="{Binding usuario.ContraseÃ±a}"
                 FontSize="15"
                 TextColor="White"
                 />
            </Border>

            <Border Stroke="#F2B90F"
                         StrokeShape="RoundRectangle 40,40,40,40"
                        HeightRequest="50"
                        WidthRequest="150"
                 StrokeThickness="3"
                 Margin="-150,480,0,0"
                 HorizontalOptions="Center">
                <Button Command="{Binding AgregarUsuarioCommand}"
                                FontFamily="Royalacid"
                                FontSize="20"
                        Text="Agregar"
                        Background="#AA5156"
                                TextColor="White"
                     />
            </Border>
        
        </Grid>
    </Grid>
</ContentPage>